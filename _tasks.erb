<%- if bundler? -%>
require 'rspec/core/rake_task'
RSpec::Core::RakeTask.new
<%- else -%>
begin
  gem 'rspec', '<%= @development_dependencies['rspec'] %>'
  require 'rspec/core/rake_task'

  RSpec::Core::RakeTask.new
rescue LoadError => e
  task :spec do
    abort e.message
  end
end
<%- end -%>

task :test    => :spec
task :default => :spec
